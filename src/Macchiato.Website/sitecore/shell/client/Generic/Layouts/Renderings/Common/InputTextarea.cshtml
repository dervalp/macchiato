@using Sitecore.Data.Items
@using Sitecore.Mvc
@using Sitecore.Web.UI
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var control = this.InitializeControl("inputTextArea");
    var text = control.GetString("Text");
    control.AppendClass(control.GetString("CssClass"));
}
<textarea @control.HtmlAttributes data-bind="value:Text" data-sc-properties='{ "Text": "@text" }' placeholder="@control.GetString("Watermark")" data-sc-presenter="scKoPresenter">
    @text
</textarea>